$primary = #f7eee5
bgColor = #ffffff
textColor = #262626

@import "../../node_modules/bulma-stylus/bulma"

body
	background bgColor
	color textColor

	#main-banner
		height 100vh
		background-image url("beach.jpg")
		background-size cover
		background-repeat no-repeat

		*
			color textColor

		.hero-body
			max-width 30rem
			display grid
			grid-template-rows 1fr 1fr 4fr

			h1
				font-weight bold

			button
				max-width 15rem
				border 0.1rem solid textColor