$primary = #f7eee5
bgColor = #ffffff
accentColor = #f0f6f6
textColor = #262626

@import "../../node_modules/bulma-stylus/bulma"

MobileOnly = "(max-width: 600px)"
TabletUp = "(min-width: 600px)"
TabletDown = "(max-width: 992px)"
TabletOnly = "(min-width: 600px) and (max-width: 992px)"
DesktopOnly = "(min-width: 992px)"

center(axis, position)
	position position

	if ((axis == "X"))
		left 50%
		transform translateX(-50%)
	else if ((axis == "Y"))
		top 50%
		transform translateY(-50%)
	else if ((axis == "XY"))
		top 50%
		left 50%
		transform translate(-50%, -50%)

.clearfix:after
	content ""
	display block
	clear both
